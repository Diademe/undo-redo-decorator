{
    "name": "undo-redo-decorator",
    "version": "1.4.0",
    "description": "",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsc --project src/tsconfig.json",
        "test": "jest --color --silent",
        "test:watch": "jest --color --silent --watch",
        "coverage": "jest --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "tslint -c tslint.json 'src/**/*.ts' && tslint -c tslint.json 'spec/**/*.ts'"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Diademe/undo-redo-decorator"
    },
    "author": "Diademe",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.5",
        "dcerialize": "3.1.2",
        "jest": "^24.1.0",
        "prettier": "^1.16.4",
        "ts-jest": "^24.0.1",
        "tslint": "^5.12.1",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.3.3"
    },
    "jest": {
        "testRegex": "/spec/.*\\.spec\\.([tj]sx?)$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "spec/**/*.ts"
        ],
        "coverageDirectory": "./dist/",
        "testURL": "http://localhost"
    },
    "dependencies": {}
}
