{
    "name": "undo-redo-decorator",
    "version": "1.5.0",
    "description": "",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsc --project src/tsconfig.app.json",
        "prepublish": "npm run build",
        "test": "jest --color --silent",
        "test:watch": "jest --color --silent --watch",
        "coverage": "jest --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "tslint --config ./tslint.json -p src/tsconfig.app.json -p spec/tsconfig.spec.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Diademe/undo-redo-decorator"
    },
    "author": "Diademe",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.25",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.3.0",
        "tslint": "^5.20.1",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "~3.6.0"
    },
    "jest": {
        "testRegex": "/spec/.*\\.spec\\.([tj]sx?)$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "spec/**/*.ts"
        ],
        "coverageDirectory": "./dist/",
        "testURL": "http://localhost"
    },
    "dependencies": {}
}
